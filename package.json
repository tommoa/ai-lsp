{
  "name": "ai-lsp",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "prepare": "husky install",
    "build": "tsc --outDir dist",
    "build:bundle": "bunx esbuild index.ts --bundle --platform=node --target=es2022 --outfile=dist/cli.js --banner:js=\"#!/usr/bin/env node\"",
    "start": "bun run index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "esbuild": "^0.19.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "bin": {
    "ai-lsp": "dist/cli-node.js",
    "ai-lsp-bun": "index.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.17",
    "@ai-sdk/openai": "^2.0.42",
    "@ai-sdk/openai-compatible": "^1.0.19",
    "ai": "^5.0.60",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
