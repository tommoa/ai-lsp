{
  "name": "ai-lsp",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "tests/fixtures/mock-provider",
    "tests/fixtures/bad-mock-provider"
  ],
  "scripts": {
    "check:deps": "bun run scripts/check-deps.ts",
    "format": "prettier --write .",
    "lint": "bun run check:deps && eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "prepare": "husky install",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --splitting",
    "build:bundle": "bun build ./src/index.ts --outfile ./dist/cli.js --target bun --format esm",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/*.test.ts",
    "test:e2e": "bun test tests/e2e/**/*.test.ts",
    "test:e2e:watch": "bun test --watch tests/e2e",
    "test:benchmark": "bun test tests/benchmark-*.test.ts",
    "test:benchmark:unit": "bun test tests/benchmark-utils.test.ts",
    "test:benchmark:integration": "bun test tests/benchmark-integration.test.ts tests/analyze-ab-results.test.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "esbuild": "^0.19.12",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "bin": {
    "ai-lsp": "dist/cli-node.js",
    "ai-lsp-bun": "src/index.ts"
  },
  "//": "DO NOT install @ai-sdk/* provider packages - users should install them separately in their own projects",
  "dependencies": {
    "ai": "^5.0.89",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
